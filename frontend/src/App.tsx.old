import React, { useState, useEffect } from 'react';
import DashboardLayout from './components/DashboardLayout';
import StatsCard from './components/StatsCard';
import ActiveCallsPanel from './components/ActiveCallsPanel';
import CallVolumeChart from './components/CallVolumeChart';
import { tenantAPI } from './services/api';
import { wsService } from './services/websocket';
import { Tenant, ActiveCall } from './types';

function App() {
  const [tenants, setTenants] = useState<Tenant[]>([]);
  const [selectedTenant, setSelectedTenant] = useState<Tenant | null>(null);
  const [activeCalls, setActiveCalls] = useState<ActiveCall[]>([]);
  const [loading, setLoading] = useState(true);
  
  // Mock stats (replace with real API calls)
  const [stats, setStats] = useState({
    totalCalls: 1247,
    activeCalls: 3,
    answeredRate: 92.5,
    avgDuration: 245
  });

  // Mock chart data (replace with real API calls)
  const chartData = [
    { time: '00:00', answered: 12, missed: 2, abandoned: 1 },
    { time: '04:00', answered: 8, missed: 1, abandoned: 0 },
    { time: '08:00', answered: 45, missed: 5, abandoned: 2 },
    { time: '12:00', answered: 67, missed: 8, abandoned: 4 },
    { time: '16:00', answered: 52, missed: 6, abandoned: 3 },
    { time: '20:00', answered: 23, missed: 3, abandoned: 1 },
  ];

  // Fetch tenants on mount
  useEffect(() => {
    const fetchTenants = async () => {
      try {
        const response = await tenantAPI.getAll();
        setTenants(response.data);
        if (response.data.length > 0) {
          setSelectedTenant(response.data[0]);
        }
      } catch (error) {
        console.error('Failed to fetch tenants:', error);
      } finally {
        setLoading(false);
      }
    };

    fetchTenants();
  }, []);

  // Connect to WebSocket when tenant changes
  useEffect(() => {
    if (selectedTenant) {
      wsService.connect(selectedTenant.id);
      
      const unsubscribe = wsService.subscribe((data) => {
        console.log('WebSocket event:', data);
        
        // Handle different event types
        if (data.type === 'call_started') {
          setActiveCalls(prev => [...prev, data.call]);
          setStats(prev => ({ ...prev, activeCalls: prev.activeCalls + 1 }));
        } else if (data.type === 'call_ended') {
          setActiveCalls(prev => prev.filter(call => call.id !== data.call_id));
          setStats(prev => ({ ...prev, activeCalls: Math.max(0, prev.activeCalls - 1) }));
        }
      });

      return () => {
        unsubscribe();
        wsService.disconnect();
      };
    }
  }, [selectedTenant]);

  // Format duration helper
  const formatDuration = (seconds: number) => {
    const mins = Math.floor(seconds / 60);
    const secs = seconds % 60;
    return `${mins}m ${secs}s`;
  };

  if (loading) {
    return (
      <div className="min-h-screen flex items-center justify-center bg-gray-50">
        <div className="text-center">
          <div className="animate-spin rounded-full h-12 w-12 border-b-2 border-primary-600 mx-auto"></div>
          <p className="mt-4 text-gray-600">Loading...</p>
        </div>
      </div>
    );
  }

  return (
    <DashboardLayout
      tenants={tenants}
      selectedTenant={selectedTenant}
      onTenantChange={setSelectedTenant}
    >
      <div className="space-y-6">
        {/* Stats Grid */}
        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          <StatsCard
            title="Total Calls Today"
            value={stats.totalCalls}
            icon="ðŸ“Š"
            trend={{ value: 12.5, isPositive: true }}
            color="blue"
          />
          <StatsCard
            title="Active Calls"
            value={stats.activeCalls}
            icon="ðŸ“ž"
            color="green"
          />
          <StatsCard
            title="Answer Rate"
            value={`${stats.answeredRate}%`}
            icon="âœ…"
            trend={{ value: 3.2, isPositive: true }}
            color="green"
          />
          <StatsCard
            title="Avg Duration"
            value={formatDuration(stats.avgDuration)}
            icon="â±ï¸"
            trend={{ value: 5.8, isPositive: false }}
            color="yellow"
          />
        </div>

        {/* Active Calls */}
        <ActiveCallsPanel
          tenantId={selectedTenant?.id || 0}
          calls={activeCalls}
        />

        {/* Call Volume Chart */}
        <CallVolumeChart data={chartData} />

        {/* Recent Activity */}
        <div className="bg-white rounded-lg shadow border border-gray-200 p-6">
          <h2 className="text-lg font-semibold text-gray-900 mb-4">
            Recent Activity
          </h2>
          <div className="space-y-3">
            <ActivityItem
              icon="ðŸ“ž"
              title="Call answered"
              description="From +1234567890 to Extension 101"
              time="2 minutes ago"
              type="success"
            />
            <ActivityItem
              icon="âŒ"
              title="Missed call"
              description="From +0987654321 to Main Line"
              time="15 minutes ago"
              type="error"
            />
            <ActivityItem
              icon="ðŸ“"
              title="Voicemail received"
              description="Extension 102 - Duration 1m 23s"
              time="1 hour ago"
              type="info"
            />
          </div>
        </div>
      </div>
    </DashboardLayout>
  );
}

interface ActivityItemProps {
  icon: string;
  title: string;
  description: string;
  time: string;
  type: 'success' | 'error' | 'info';
}

const ActivityItem: React.FC<ActivityItemProps> = ({ icon, title, description, time, type }) => {
  const typeColors = {
    success: 'bg-green-50 text-green-700',
    error: 'bg-red-50 text-red-700',
    info: 'bg-blue-50 text-blue-700',
  };

  return (
    <div className="flex items-start space-x-3 p-3 hover:bg-gray-50 rounded-lg transition-colors">
      <span className="text-2xl">{icon}</span>
      <div className="flex-1 min-w-0">
        <p className="text-sm font-medium text-gray-900">{title}</p>
        <p className="text-sm text-gray-500">{description}</p>
      </div>
      <span className="text-xs text-gray-400 whitespace-nowrap">{time}</span>
    </div>
  );
};

export default App;